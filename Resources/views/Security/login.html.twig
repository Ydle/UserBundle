{% extends "YdleUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
{% if error %}
    <div>{{ error|trans }}</div>
{% endif %}
<div class="row center-block">
    <div style="text-align:center;">
        <img src="{{ asset('bundles/ydleihm/images/ydleLogo.png') }}" />
    </div>
    <div class="center-block">
    <form action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal" role="form">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

        <div class="form-group">
            <label class="col-sm-5 control-label" for="username">{{ "pseudo.title" | trans({}, "YdleUserBundle") }}</label>
            <div class="col-xs-3">
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-5 control-label" for="password">{{ "password.title" | trans({}, "YdleUserBundle") }}</label>
            <div class="col-xs-3">
                <input type="password" id="password" name="_password" required="required" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-5 col-sm-10">
                <label for="remember_me">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    {{ "remember.me.title" | trans({}, "YdleUserBundle") }}
                </label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-5 col-sm-10">
              <input type="submit" id="_submit" name="_submit" value="{{ "action.connexion" | trans({}, "YdleUserBundle") }}"  class="btn btn-default" />
              <a href="{{ path('fos_user_registration_register')}}">{{ "action.create.account" | trans({}, "YdleUserBundle") }}</a>
            </div>
        </div>

    </form>
    </div>
</div>
{% endblock fos_user_content %}
